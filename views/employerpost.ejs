<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />

    <link rel="stylesheet" href="employerpoststyle.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <%-include('./partials/navbar2.ejs')%>
    <div class="container">
      <div class="title">Jobs</div>
      <div class="content">
        <form action="/employerpost" method="post">
          <div class="user-details">
            <div class="input-box">
              <span class="details">Job Name</span>
              <input type="text"  name="name" placeholder="Enter job name" required />
            </div>
            <div class="input-box">
              <span class="details">Work Description</span>
              <input
                type="text"
                placeholder="Enter work description"
                name="work"
                required
              />
            </div>
            <div class="input-box">
              <span class="details">Salary</span>
              <input type="text" placeholder="Enter salary" name="salary" required />
            </div>
            <div class="input-box">
              <span class="details">Address</span>
              <input type="text" placeholder="Enter address" name="address" required />
            </div>
          </div>
          <div class="gender-details">
            <input type="radio" name="workmode" id="dot-1" value="home"/>
            <input type="radio" name="workmode" id="dot-2" value="remote"/>
            <input type="radio" name="workmode" id="dot-3" value="onsite"/>
            <span class="gender-title">Work Mode</span>
            <div class="category">
              <label for="dot-1">
                <span class="dot one"></span>
                <span class="gender">Home</span>
              </label>
              <label for="dot-2">
                <span class="dot two"></span>
                <span class="gender">Remote</span>
              </label>
              <label for="dot-3">
                <span class="dot three"></span>
                <span class="gender">On site</span>
              </label>
            </div>
          </div>
          <div class="button">
            <input type="submit" value="Submit" />
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
